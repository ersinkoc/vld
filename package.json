{
  "name": "@oxog/vld",
  "version": "1.3.1",
  "description": "Ultra-fast TypeScript-first schema validation with zero dependencies and 27+ language support",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "sideEffects": false,
  "scripts": {
    "build": "tsc && node scripts/fix-imports.js",
    "test": "jest --coverage",
    "test:types": "tsc --noEmit",
    "benchmark": "node benchmarks/quick-bench.cjs",
    "benchmark:full": "node benchmarks/performance.cjs",
    "benchmark:memory": "node --expose-gc benchmarks/memory.cjs",
    "benchmark:startup": "node benchmarks/startup.cjs",
    "benchmark:all": "npm run benchmark && npm run benchmark:memory && npm run benchmark:startup",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepublishOnly": "npm run build && npm test"
  },
  "keywords": [
    "validation",
    "schema",
    "typescript",
    "zod",
    "alternative",
    "zero-dependency",
    "fast",
    "type-safe",
    "runtime-validation",
    "i18n",
    "internationalization",
    "multilingual"
  ],
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "author": "Ersin Koc",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ersinkoc/vld.git"
  },
  "bugs": {
    "url": "https://github.com/ersinkoc/vld/issues"
  },
  "homepage": "https://github.com/ersinkoc/vld#readme",
  "devDependencies": {
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "benchmark": "^2.1.4",
    "eslint": "^8.56.0",
    "fast-glob": "^3.3.3",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "prettier": "^3.1.1",
    "rollup": "^4.46.2",
    "rollup-plugin-typescript2": "^0.36.0",
    "ts-jest": "^29.4.1",
    "typescript": "^5.3.3",
    "zod": "^4.0.17"
  }
}
